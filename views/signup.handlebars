{{> header}}

<h1 class="title">MovieMatch</h1>

<form id="signup" method="POST" action="/profile">
    <label for id="username">Username</label>
    <input type="text" id="username" name="username" required/>

    <label for id="email">Email</label>
    <input type="email" id="email" name="email" required/>

    <label for id="date-of-birth">Date of birth</label>
    <input type="date" id="date-of-birth" name="date-of-birth" required/>

    <label for id="password">Password</label>
    <input type="password" id="password" name="password" required/>

    <input type="submit" id="submit" class="login-button" value="Sign up!" />
</form>

<a href="/" class="italic">Log in</a>

{{> footer}}