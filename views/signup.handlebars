{{> header}}

<form id="signup" method="POST" action="/signup">

    <label for id="username">Username</label>
    <input type="text" id="username" minlength="3" maxlength="20" name="username" required/>

    <label for id="email">Email</label>
    <input type="email" id="email" name="email" required/>

    <label for id="age">Age</label>
    <input type="number" id="age" name="age" required/>

    <label for id="password">Password</label>
    <input type="password" id="password" minlength="8" maxlength="50" name="password" required/>

    <input type="submit" id="submit" class="login-button" value="Sign up!" />
</form>

<a href="/login" class="italic">Log in</a>